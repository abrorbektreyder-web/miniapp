{
  "name": "telegram-mini-app-backend",
  "version": "0.0.1",
  "description": "Backend API for Telegram Mini App - Kiyim Do'koni",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:api": "vitest run --dir src/__tests__",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "ecommerce",
    "nodejs",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.4",
    "uuid": "^9.0.1",
    "@prisma/client": "^5.17.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "morgan": "^1.10.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/morgan": "^1.9.9",
    "@types/node-fetch": "^2.6.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "typescript": "^5.5.3",
    "tsx": "^4.16.2",
    "prisma": "^5.17.0",
    "vitest": "^2.0.4",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
