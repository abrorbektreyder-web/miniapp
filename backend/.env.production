# Backend Production Environment

# Database (Neon/Supabase)
DATABASE_URL="postgresql://user:password@host:5432/telegram_mini_app?schema=public"

# JWT Secret (min 32 characters - CHANGE THIS!)
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long-change-in-production"

# Telegram Bot Token (from @BotFather - KEEP SECRET!)
TELEGRAM_BOT_TOKEN="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"

# Server
PORT=3000
NODE_ENV=production

# CORS (Your frontend domain)
CORS_ORIGIN="https://yourdomain.com"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

